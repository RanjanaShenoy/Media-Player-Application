<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3DC78"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="Multi Media Application"
        android:textColor="#EC0F5F"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="172dp"
        android:layout_height="162dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/gallery_logo" />
        <!-- app:srcCompat="@android:res/drawable/image1"  -->


    <TextView
        android:id="@+id/textgallery"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="290dp"
        android:text="Gallery"
        android:textColor="#EC0F5F"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/music"
        android:layout_width="172dp"
        android:layout_height="162dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="390dp"
        android:src="@drawable/music_logo" />
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textmusic"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="550dp"
        android:text="Music Player"
        android:textColor="#EC0F5F"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btnabt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="620dp"
        android:text="About us"
        app:backgroundTint="#EC0F5F" />

</RelativeLayout>